pipeline {
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }
    environment {
        FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }
    stages {
        stage('Building') {
            steps {
                sh 'npm install -g firebase-tools'
            }
        }
        stage('Testing') {
            steps {
                echo 'This is Testing.'
            }
        }
        stage('Staging') {
            steps {
                sh 'firebase deploy -P password-generator-staging --token "1//06HM_3YzP9y9ZCgYIARAAGAYSNwF-L9Ir7hkisunOlUAaudyero37GdZob5uthhgKc9ALa2IRv56fg0qgHa-zCIsL-a3tcqU2Ys4"'
            }
        }
        stage('Production') {
            steps {
                sh 'firebase deploy -P password-generator-production --token "1//06HM_3YzP9y9ZCgYIARAAGAYSNwF-L9Ir7hkisunOlUAaudyero37GdZob5uthhgKc9ALa2IRv56fg0qgHa-zCIsL-a3tcqU2Ys4"'
            }
        }
    }
}

